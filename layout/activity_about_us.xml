<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F0F0F0">

    <!-- Header -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="#165D96">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/circle_shape_white"
            android:src="@drawable/baseline_keyboard_backspace_24" />

        <!-- Title -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="80dp"
            android:text="About Us"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/inter2" />
    </RelativeLayout>

    <!-- First Profile Card -->
    <RelativeLayout
        android:id="@+id/profileCard1"
        android:layout_width="250dp"
        android:layout_height="290dp"
        android:layout_marginTop="85dp"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="16dp"
        android:background="#222831"
        android:padding="16dp"
        android:orientation="vertical"
        app:cornerRadius="100dp">

        <ImageView
            android:id="@+id/profileImage1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/nji" />

        <TextView
            android:id="@+id/nameText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profileImage1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="Fadli Ahmad Fauzi"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/idText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameText1"
            android:layout_centerHorizontal="true"
            android:text="2203421037"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />
    </RelativeLayout>

    <!-- Second Profile Card -->
    <RelativeLayout
        android:id="@+id/profileCard2"
        android:layout_width="250dp"
        android:layout_height="290dp"
        android:layout_marginTop="380dp"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="16dp"
        android:background="#222831"
        android:padding="16dp"
        android:orientation="vertical"
        app:cornerRadius="100dp">

        <ImageView
            android:id="@+id/profileImage2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sipa2" />

        <TextView
            android:id="@+id/nameText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profileImage2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="Ai Syifa Maharani"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/idText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameText2"
            android:layout_centerHorizontal="true"
            android:text="220341001"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@drawable/bottomnav"
        android:gravity="center">

        <!-- Ikon navigasi di sini -->
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_home_24" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_file_download_24"
            android:layout_marginStart="50dp"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_group_24"
            android:layout_marginStart="50dp"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_format_list_bulleted_24"
            android:layout_marginStart="50dp"/>
    </LinearLayout>

</RelativeLayout>